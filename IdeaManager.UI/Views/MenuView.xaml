<UserControl x:Class="IdeaManager.UI.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:IdeaManager.UI.ViewModels"
             xmlns:local="clr-namespace:IdeaManager.UI.Views"
             Height="Auto" Width="150">
    <StackPanel Margin="10">
        <TextBlock Text="Navigation" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>

        <Button Content="Liste des idées"
                Command="{Binding ShowIdeaListCommand}" 
                Margin="0 5 0 0"/>

        <Button Content="Nouvelle idée"
                Command="{Binding ShowIdeaFormCommand}" 
                Margin="0 5 0 0"/>
    </StackPanel>
</UserControl>
