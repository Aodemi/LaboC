<UserControl x:Class="IdeaManager.UI.Views.IdeaFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IdeaManager.UI.Converters">
    <UserControl.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>

    <StackPanel Margin="20" Width="400">
        <TextBlock Text="Soumettre une idée" FontSize="20" Margin="0 0 0 15" />

        <TextBlock Text="Titre :" />
        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Foreground="Red" FontSize="11" Text="{Binding ErrorMessage}" Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}" />

        <TextBlock Text="Description :" Margin="0 15 0 0"/>
        <TextBox Text="{Binding Description}" AcceptsReturn="True" Height="80" />

        <Button Content="Soumettre"
                Command="{Binding SubmitCommand}"
                Margin="0 20 0 0" Height="40"/>

        <TextBlock Text="Idée soumise avec succès !" Foreground="Green" Margin="0 10 0 0"
                   Visibility="{Binding ConfirmationMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
    </StackPanel>
</UserControl>
